@model Warehouse.Model.WareHouseItem.WareHouseItemModel

<div>
    <h4>Chi tiết vật tư</h4>
    <hr />
    <form asp-controller="WareHouseItem" asp-action="Detail">
        <div class="form-body">
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="ItemId" />
            <input type="hidden" asp-for="IsPrimary" />
            <div class="modal-body">
                 <div class="form-group">
                    <label asp-for="Code" class="control-label"></label>
                    <input asp-for="Code" class="form-control" min="0" readonly="@(true)" />
                    <span asp-validation-for="Code" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" min="0" readonly="@(true)" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="UnitId" class="control-label"></label>
                    @Html.DropDownListFor(m => m.UnitId, Model.AvailableUnit, "Đơn vị tính", new { @class = "form-control", style = "width: 100%", disabled = "disabled" })
                    <span asp-validation-for="UnitId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CategoryId" class="control-label"></label>
                    @Html.DropDownListFor(m => m.CategoryId, Model.AvailableCategory, "Loại vật tư", new { @class = "form-control", style = "width: 100%" , disabled = "disabled"})
                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="VendorId" class="control-label"></label>
                    @Html.DropDownListFor(m => m.VendorId, Model.AvailableVendor, "Loại vật tự", new { @class = "form-control", style = "width: 100%", disabled = "disabled" })
                    <span asp-validation-for="VendorId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Country" class="control-label"></label>
                    <input asp-for="Country" class="form-control" min="0" readonly="@(true)" />
                    <span asp-validation-for="Country" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <input asp-for="Description" class="form-control" min="0" readonly="@(true)" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                 <div class="form-group form-group-sm">
                    Trang thai
                    <div class="col-md-9">
                        @Html.DisplayFor(m => m.Inactive)
                    </div>
                </div>
                <span>Các Đơn Vị Có Thể Sử Dụng</span>
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>
                                Đơn vị
                            </th>
                            <th>
                                Tỉ lệ chuyển đổi
                            </th>
                            <th>
                                Ghi chú
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                            <tr>
                                <td>
                                    @Html.DropDownListFor(m => m.UnitId, Model.AvailableUnit, "Đơn vị", new { @class = "form-control", style = "width: 100%", disabled = "disabled"  })
                                </td>
                                <td>
                                    <input asp-for="ConvertRate" class="form-control" min="0" readonly="@(true)" />
                                </td>
                                <td>
                                    <input asp-for="Note" class="form-control" min="0" readonly="@(true)" />
                                </td>
                            </tr>
                        
                    </tbody>

                </table>
            </div>
        </div>
    </form>
</div>
